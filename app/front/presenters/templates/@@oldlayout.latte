<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width">

        {block sheets}
        <link rel="stylesheet" type="text/css" href="{$basePath}/css/bootstrap.min.css" />
        <link rel="stylesheet" type="text/css" href="{$basePath}/css/style.css" />
        {/block}

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
            <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->

        <title>{ifset title}{include title|striptags} | {/ifset}Big Band Biskupská</title>
    </head>

    <body>

        <nav class="navbar navbar-default navbar-menu" id="navbar-top">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Zobrazit menu</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{link :Front:Homepage:default}">Big Band Biskupská</a>
                </div>


                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav navbar-right">
                      <!-- <li n:class="$presenter->isLinkCurrent(':Front:Homepage:default') ? 'active'">
                          <a href="{link :Front:Homepage:default}">Big Band Biskupská
                              <span n:if="$presenter->isLinkCurrent(':Front:Homepage:default')" class="sr-only"> (aktuální)</span>
                          </a>
                      </li> -->
                        <li n:class="$presenter->isLinkCurrent(':Front:Band:default') ? 'active'">
                            <a href="{link :Front:Band:default}">Členové
                                <span n:if="$presenter->isLinkCurrent(':Front:Band:default')" class="sr-only"> (aktuální)</span>
                            </a>
                        </li>
                        <li n:class="$presenter->isLinkCurrent(':Front:Concert:default') ? 'active'">
                            <a href="{link :Front:Concert:default}">Koncerty
                                <span n:if="$presenter->isLinkCurrent(':Front:Concert:default')" class="sr-only"> (aktuální)</span>
                            </a>
                        </li>
                        <li n:class="$presenter->isLinkCurrent(':Front:Gallery:default') ? 'active'">
                            <a href="{link :Front:Gallery:default}">Galerie
                                <span n:if="$presenter->isLinkCurrent(':Front:Gallery:default')" class="sr-only"> (aktuální)</span>
                            </a>
                        </li>
                        <li n:class="$presenter->isLinkCurrent(':Front:Contact:default') ? 'active'">
                            <a href="{link :Front:Contact:default}">Kontakt
                                <span n:if="$presenter->isLinkCurrent(':Front:Contact:default')" class="sr-only"> (aktuální)</span>
                            </a>
                        </li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container -->
        </nav>

        <div class="clearfix"></div>

        {*
        <nav class="navbar navbar-default navbar-menu">
          <div class="container">
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav">
                <!-- <li n:class="$presenter->isLinkCurrent(':Front:Homepage:default') ? 'active'">
                    <a href="{link :Front:Homepage:default}">Big Band Biskupská
                        <span n:if="$presenter->isLinkCurrent(':Front:Homepage:default')" class="sr-only"> (aktuální)</span>
                    </a>
                </li> -->
                <li n:class="$presenter->isLinkCurrent(':Front:Band:default') ? 'active'">
                    <a href="{link :Front:Band:default}">Členové
                        <span n:if="$presenter->isLinkCurrent(':Front:Band:default')" class="sr-only"> (aktuální)</span>
                    </a>
                </li>
                <li n:class="$presenter->isLinkCurrent(':Front:Concert:default') ? 'active'">
                    <a href="{link :Front:Concert:default}">Koncerty
                        <span n:if="$presenter->isLinkCurrent(':Front:Concert:default')" class="sr-only"> (aktuální)</span>
                    </a>
                </li>
                <li n:class="$presenter->isLinkCurrent(':Front:Gallery:default') ? 'active'">
                    <a href="{link :Front:Gallery:default}">Galerie
                        <span n:if="$presenter->isLinkCurrent(':Front:Gallery:default')" class="sr-only"> (aktuální)</span>
                    </a>
                </li>
                <li n:class="$presenter->isLinkCurrent(':Front:Contact:default') ? 'active'">
                    <a href="{link :Front:Contact:default}">Kontakt
                        <span n:if="$presenter->isLinkCurrent(':Front:Contact:default')" class="sr-only"> (aktuální)</span>
                    </a>
                </li>
              </ul>
            </div><!-- /.navbar-collapse -->
          </div><!-- /.container -->
        </nav>
        *}

        <div class="container-fluid pic picture" {block picture-id}{/block}>
            <header class="bg-image clearfix">
                <img src="{$basePath}/img/bb.jpg" alt="" class="img-responsive" />
            </header>
            <div class="img-gradient-bottom"></div>
        </div>

        {block top-content}
        <div class="container">
            <div n:foreach="$flashes as $flash" n:class="alert, alert-$flash->type">{$flash->message}</div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default panel-content">
                        <div class="panel-heading">
                            <h1>
                                {block heading}
                                {/block}
                            </h1>
                        </div>
                        <div class="panel-body">
                            {include content}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {/block}

        <nav class="navbar navbar-default navbar-fixed-bottom copyright">
            <div class="container text-center">
                Big Band Biskupská 2016 &copy; Tuli
            </div>
        </nav>

        {block scripts}
        <script src="{$basePath}/js/jquery.min.js"></script>
        <script src="{$basePath}/js/bootstrap.min.js"></script>
        <script src="{$basePath}/js/main.js"></script>
        {/block}
    </body>
</html>



